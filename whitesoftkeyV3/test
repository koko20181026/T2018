<script type="text/javascript">
//1.document.rdy で画面input 属性をすべて readOnlyにする
  //2. focusのセットタイムアウト20で該当read only を解除する
  //
  $('#dummyText').attr('readonly',true);
  
  $(function(){
    $('input').focus(function(){
			$(this).css("background-color","red");
			setTimeout(function(){
        $('input').attr('readonly',false);
      },20);
    });
    
    $('input').blur(function(){
    	$('input').attr('readonly',true);
    });

		$("#putButton").click(function(){
    	var getData = $('#dummyText').val();
    	$('#dummyText').val(getData +"aaaaa");
    });

  });

</script>
</head>
<body>
	<div>
    target:<input type = "text" id="dummyText">

    <button id = "putButton">値入力ボタン</button>  
    
</div>


</body>
